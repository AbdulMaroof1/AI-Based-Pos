{
  "name": "@pos/api",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "db:migrate": "prisma migrate dev --schema=./infra/prisma/schema.prisma --name init",
    "db:generate": "prisma generate --schema=./infra/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./infra/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/platform-express": "^10.2.10",
    "@pos/config": "workspace:*",
    "@pos/shared-types": "workspace:*",
    "@pos/utils": "workspace:*",
    "@prisma/client": "^5.7.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "nodemailer": "^8.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.10",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
