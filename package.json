{
  "name": "ai-based-pos",
  "version": "1.0.0",
  "description": "AI-first omnichannel POS system",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @pos/shared-types build && pnpm --filter @pos/config build && pnpm --filter @pos/api-client build && pnpm --filter @pos/utils build && pnpm --filter @pos/api build",
    "build:packages": "pnpm --filter '@pos/*' build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "start": "pnpm dev:api",
    "dev": "pnpm dev:api",
    "dev:api": "pnpm --filter @pos/api dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "db:migrate": "pnpm --filter @pos/api db:migrate",
    "db:generate": "pnpm -r db:generate"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "nothing": "^0.1.0"
  }
}
